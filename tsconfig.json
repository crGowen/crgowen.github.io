{
    "compilerOptions":{
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "outDir": "./unbundled/",
        "removeComments": true,
        "module": "esnext",
        "lib": ["esnext", "dom"],
        "target": "es6",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "sourceMap": false,
        "moduleResolution": "node"
    },
    "include": [
        "./ts/*.ts",
        "./ts/*.tsx"
    ]
}